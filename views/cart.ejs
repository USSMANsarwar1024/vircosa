<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vircosa | Luxury Fragrances</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts (Playfair Display + Montserrat) -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="../stylesheets/navbar-styles.css">
    <link rel="stylesheet" href="../stylesheets/footer-styles.css">
    <link rel="stylesheet" href="../stylesheets/main-styles.css">
    <link rel="stylesheet" href="../stylesheets/cta-section-styles.css">

    <style>
        /* ===== Hero Section ===== */
        .hero-section {
            background: linear-gradient(rgba(42, 33, 24, 0.4), rgba(42, 33, 24, 0.4)),
                url('https://images.unsplash.com/photo-1592945403244-b3fbafd7f539?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 180px 0 150px;
            text-align: center;
            position: relative;
        }

        .hero-title {
            font-size: 4rem;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 30px;
            opacity: 0.9;
            font-weight: 300;
        }

        .btn-hero {
            background-color: var(--primary-color);
            color: white;
            padding: 12px 35px;
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 1px;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-hero:hover {
            background-color: var(--secondary-color);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        /* ===== Page Header ===== */
        .page-header {
            background: linear-gradient(rgba(42, 33, 24, 0.4), rgba(42, 33, 24, 0.4)),
                url('https://images.unsplash.com/photo-1592945403244-b3fbafd7f539?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 150px 0 100px;
            text-align: center;
            position: relative;
            margin-top: 80px;
        }

        .page-title {
            font-size: 3.5rem;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        /* ===== Cart Section ===== */
        .cart-section {
            padding: 80px 0;
        }

        .cart-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .cart-header {
            background-color: var(--light-color);
            padding: 20px 30px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .cart-item {
            display: flex;
            align-items: center;
            padding: 25px 30px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .cart-item:hover {
            background-color: rgba(139, 90, 43, 0.03);
        }

        .cart-item-img {
            width: 120px;
            height: 120px;
            border-radius: 8px;
            overflow: hidden;
            margin-right: 25px;
            flex-shrink: 0;
        }

        .cart-item-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .cart-item-details {
            flex-grow: 1;
        }

        .cart-item-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.4rem;
            color: var(--secondary-color);
            margin-bottom: 5px;
        }

        .cart-item-desc {
            color: #777;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .cart-item-price {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 1.1rem;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            margin: 15px 0;
        }

        .qty-btn {
            width: 32px;
            height: 32px;
            background: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .qty-btn:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .qty-input {
            width: 50px;
            text-align: center;
            border: none;
            font-weight: 600;
            margin: 0 10px;
            font-size: 1.1rem;
            background: transparent;
        }

        .remove-item {
            color: #999;
            font-size: 0.9rem;
            cursor: pointer;
            transition: color 0.2s ease;
            padding: 10px;
            margin-left: 20px;
            border: 1px solid var(--accent-color);
            border-radius: 30px;
        }

        .remove-item:hover {
            color: var(--primary-color);
        }

        .cart-summary {
            padding: 30px;
            background-color: var(--light-color);
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .summary-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--secondary-color);
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .total-row {
            font-weight: 600;
            font-size: 1.2rem;
            color: var(--primary-color);
            border-bottom: none;
            margin-top: 10px;
        }

        .promo-input {
            border: 1px solid #ddd;
            padding: 10px 15px;
            border-radius: 30px;
            width: 100%;
            margin-bottom: 15px;
        }

        .btn-checkout {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-checkout:hover {
            background-color: var(--secondary-color);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .btn-continue {
            background-color: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-continue:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .empty-cart {
            text-align: center;
            padding: 80px 0;
        }

        .empty-cart i {
            font-size: 5rem;
            color: var(--accent-color);
            margin-bottom: 20px;
        }

        .empty-cart h3 {
            color: var(--secondary-color);
            margin-bottom: 20px;
        }

        .cart-empty {
            text-align: center;
            padding: 80px 0;
        }

        .cart-empty i {
            font-size: 4rem;
            color: var(--accent-color);
            margin-bottom: 20px;
        }

        .cart-empty h3 {
            margin-bottom: 20px;
            color: var(--secondary-color);
        }

        .cart-empty p {
            color: #666;
            margin-bottom: 30px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-cart {
            background-color: var(--primary-color);
            color: white;
            padding: 12px 35px;
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 1px;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-cart:hover {
            background-color: var(--secondary-color);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

        /* ===== Responsive Adjustments ===== */
        @media (max-width: 992px) {
            .page-title {
                font-size: 2.8rem;
            }
        }

        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

            .cart-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .cart-item-img {
                margin-right: 0;
                margin-bottom: 20px;
            }

            .cart-item-details {
                width: 100%;
            }
        }

        @media (max-width: 576px) {
            .page-title {
                font-size: 2.2rem;
            }

            .page-header {
                padding: 120px 0 70px;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

    <!-- Added to cart notification (for all pages) -->
    <div class="position-fixed bottom-0 end-0 p-3 toast-container" style="z-index: 11"></div>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="hero-title">Elegance in Every Drop</h1>
            <p class="hero-subtitle">Discover the art of fragrance with Zephyra Luxe</p>
            <a href="#products" class="btn btn-hero">Explore Scents</a>
        </div>
    </section>


    <!-- Cart Section -->
    <section class="cart-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-container">
                        
                        <!-- Cart Items -->
                        <% if (cartItems.length > 0) { %>
                            <div class="cart-header">
                                <h3 class="mb-0">Your Cart <span class="text-muted" id="cart-item-count"><%= total_items %> items</span></h3>
                            </div>
                            <% cartItems.forEach(item => { %>
                                <div class="cart-item" 
                                     data-product-id="<%= item.product._id %>" 
                                     data-size="<%= item.size %>">
                                    <div class="cart-item-img">
                                        <img src="<%= item.product.images[0] %>" alt="<%= item.product.name %>">
                                    </div>
                                    <div class="cart-item-details">
                                        <h4 class="cart-item-title"><%= item.product.name %></h4>
                                        <!-- Show size & price -->
                                        <p class="cart-item-desc">
                                            <strong><%= item.size %>ml</strong> â€“ PKR <%= item.price %>
                                        </p>
                                    </div>
                                    
                                    <!-- Quantity Controls -->
                                    <div class="quantity-control me-4">
                                        <button 
                                            class="qty-btn minus" 
                                            data-id="<%= item.product._id %>" 
                                            data-size="<%= item.size %>"
                                            data-price="<%= item.price %>"
                                        >
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <input 
                                            type="text" 
                                            class="qty-input" 
                                            data-id="<%= item.product._id %>" 
                                            data-size="<%= item.size %>"
                                            value="<%= item.quantity %>" 
                                            readonly
                                        >

                                        <button 
                                            class="qty-btn plus" 
                                            data-id="<%= item.product._id %>" 
                                            data-size="<%= item.size %>"
                                            data-price="<%= item.price %>"
                                        >
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Item Total -->
                                    <div class="cart-item-total">
                                        <span 
                                            class="cart-item-price item-total-price" 
                                            data-id="<%= item.product._id %>" 
                                            data-size="<%= item.size %>"
                                        >
                                            PKR <%= (item.price * item.quantity).toFixed(2) %>
                                        </span>
                                    </div>

                                    <!-- Remove Button -->
                                    <div class="ms-auto">
                                        <span 
                                            class="remove-item" 
                                            data-id="<%= item.product._id %>" 
                                            data-size="<%= item.size %>"
                                        >
                                            Remove
                                        </span>
                                    </div>

                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="cart-empty" id="empty-cart">
                                <i class="far fa-heart"></i>
                                <h3>Your Cart is Empty</h3>
                                <p>Start exploring our collection of luxury fragrances and add your favorites to your cart.</p>
                                <a href="/products" class="btn btn-cart">Discover Scents</a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <% if (cartItems.length > 0) { %>
                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="cart-summary">
                        <h3 class="summary-title">Order Summary</h3>

                        <div class="summary-row">
                            <span>Subtotal</span>
                            <span id="summary-subtotal">PKR <%= subtotal.toFixed(2) %></span>
                        </div>

                        <div class="summary-row">
                            <span>Shipping</span>
                            <span id="summary-shipping">PKR <%= shipping %></span>
                        </div>

                        <div class="summary-row">
                            <span>Tax</span>
                            <span id="summary-tax">PKR <%= tax.toFixed(2) %></span>
                        </div>

                        <div class="summary-row total-row">
                            <span>Total</span>
                            <span id="summary-total">PKR <%= total.toFixed(2) %></span>
                        </div>

                        <button onclick="location.href='/checkout'" class="btn btn-checkout mb-3">Proceed to
                            Checkout</button>
                        <button onclick="location.href='/products'" class="btn btn-continue">Continue
                            Shopping</button>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('partials/newsletter') %>
    <%- include('partials/footer') %>

    <!-- Bootstrap JS (for navbar toggle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Cart Functionality -->
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        document.addEventListener('DOMContentLoaded', () => {

            // -------------------------------------------
            // Helper: Update Cart Item on Backend
            // -------------------------------------------
            async function updateCartItemQuantity(productId, size, action) {
                try {
                    const response = await fetch('/cart/update', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, size, action })
                    });

                    const data = await response.json();

                    if (!response.ok) {
                        console.error("Update error:", data);
                        return;
                    }

                    // Remove item if backend removed it
                    if (data.removed) {
                        const itemEl = document.querySelector(
                            `.cart-item[data-product-id="${productId}"][data-size="${size}"]`
                        );
                        if (itemEl) {
                            itemEl.style.opacity = "0";
                            itemEl.style.transform = "translateX(-20px)";
                            setTimeout(() => {
                                itemEl.remove();
                                updateLocalCartTotals();
                                
                                // Check if cart is now empty
                                if (document.querySelectorAll('.cart-item').length === 0) {
                                    location.reload();
                                }
                            }, 250);
                        }
                    }

                } catch (err) {
                    console.error("Network error updating cart", err);
                }
            }

            // -------------------------------------------
            // Recalculate Totals (Frontend)
            // -------------------------------------------
            function updateLocalCartTotals() {
                let subtotal = 0;
                let totalItems = 0;
                const shipping = 300;

                document.querySelectorAll('.cart-item').forEach(item => {
                    const productId = item.getAttribute('data-product-id');
                    const size = item.getAttribute('data-size');

                    // Find quantity input within this specific cart item
                    const qtyInput = item.querySelector('.qty-input');
                    const quantity = parseInt(qtyInput?.value) || 0;

                    // Find price from any qty-btn within this cart item
                    const qtyBtn = item.querySelector('.qty-btn');
                    const priceAttr = qtyBtn?.getAttribute('data-price');
                    const price = parseFloat(priceAttr) || 0;

                    console.log('Cart Item Debug:', { 
                        productId, 
                        size, 
                        quantity, 
                        priceAttr,
                        price 
                    });

                    const itemTotal = price * quantity;

                    // Update individual item total
                    const priceSpan = item.querySelector('.item-total-price');
                    if (priceSpan) {
                        priceSpan.textContent = `PKR ${itemTotal.toFixed(2)}`;
                    }

                    subtotal += itemTotal;
                    totalItems += quantity;
                });

                const tax = subtotal * 0.17;
                const total = subtotal + tax + shipping;

                console.log('Totals:', { subtotal, tax, shipping, total, totalItems });

                // Update Summary
                const itemCount = document.getElementById('cart-item-count');
                const summarySubtotal = document.getElementById('summary-subtotal');
                const summaryShipping = document.getElementById('summary-shipping');
                const summaryTax = document.getElementById('summary-tax');
                const summaryTotal = document.getElementById('summary-total');

                if (itemCount) itemCount.textContent = `${totalItems} items`;
                if (summarySubtotal) summarySubtotal.textContent = `PKR ${subtotal.toFixed(2)}`;
                if (summaryShipping) summaryShipping.textContent = `PKR ${shipping}`;
                if (summaryTax) summaryTax.textContent = `PKR ${tax.toFixed(2)}`;
                if (summaryTotal) summaryTotal.textContent = `PKR ${total.toFixed(2)}`;
            }

            // -------------------------------------------
            // Quantity Buttons Handler
            // -------------------------------------------
            document.querySelectorAll('.qty-btn').forEach(btn => {
                btn.addEventListener('click', () => {

                    const productId = btn.dataset.id;
                    const size = btn.dataset.size;

                    const input = document.querySelector(
                        `.qty-input[data-id="${productId}"][data-size="${size}"]`
                    );

                    let quantity = parseInt(input.value);
                    let action = null;

                    if (btn.classList.contains('plus')) {
                        input.value = quantity + 1;
                        action = 'increase';
                    }

                    if (btn.classList.contains('minus')) {
                        if (quantity > 1) {
                            input.value = quantity - 1;
                            action = 'decrease';
                        } else {
                            // Remove item visually
                            const item = document.querySelector(
                                `.cart-item[data-product-id="${productId}"][data-size="${size}"]`
                            );
                            item.style.opacity = "0";
                            item.style.transform = "translateX(-10px)";
                            action = 'decrease';
                        }
                    }

                    if (action) {
                        updateLocalCartTotals();   // instant UI update
                        updateCartItemQuantity(productId, size, action);
                    }

                });
            });

            // -------------------------------------------
            // Remove Item Handler
            // -------------------------------------------
            document.querySelectorAll('.remove-item').forEach(btn => {
                btn.addEventListener('click', () => {
                    const productId = btn.dataset.id;
                    const size = btn.dataset.size;

                    const item = document.querySelector(
                        `.cart-item[data-product-id="${productId}"][data-size="${size}"]`
                    );

                    item.style.opacity = '0';
                    item.style.transform = 'translateX(-20px)';

                    setTimeout(() => {
                        item.remove();
                        updateLocalCartTotals();
                        
                        // Check if cart is now empty
                        if (document.querySelectorAll('.cart-item').length === 0) {
                            location.reload();
                        }
                    }, 250);

                    fetch('/cart/remove', {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({ productId, size })
                    });
                });
            });

            // -------------------------------------------
            // Initial Totals
            // -------------------------------------------
            updateLocalCartTotals();

        });
    </script>
</body>

</html>